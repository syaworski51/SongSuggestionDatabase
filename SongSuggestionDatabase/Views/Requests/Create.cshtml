@model Request

@{
    ViewData["Title"] = "Create";
}

<h1>New Request</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Requests" asp-action="Create">
            <input type="hidden" asp-for="EpisodeId" />
            <div class="container">
                <div class="row">
                    <div class="col" id="superchat-area">
                        <p>
                            Paste superchat here:
                        </p>
                        <textarea id="superchat-paste-area"></textarea>
                    </div>
                    <div class="col" id="request-info">
                        <div class="form-group" id="requester-area">
                            <label asp-for="RequestedBy" class="control-label"></label>
                            <input asp-for="RequestedBy" class="form-control" id="requester-field" />
                        </div>
                        <div class="form-group" id="amount-area">
                            <select id="currency-dropdown" asp-for="CurrencyCode" asp-items="@ViewBag.Currencies"></select>
                            <input type="text" class="form-control" asp-for="Amount" id="amount-field" />
                        </div>
                        <div class="form-group" id="title-area">
                            <label asp-for="Title" class="control-label"></label>
                            <input asp-for="Title" class="form-control" id="title-field" />
                        </div>
                        <div class="form-group" id="switch-title-and-artist-area">
                            <button class="btn btn-secondary" onclick="SwitchTitleAndArtist">Switch Title and Artist</button>
                        </div>
                        <div class="form-group" id="artist-area">
                            <label asp-for="Artist" class="control-label"></label>
                            <input asp-for="Artist" class="form-control" id="artist-field" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary">Add</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
